<div id="admin">
    <div class="sidebar">
        <div class="sidebar_avatar">
            <i class="fa-solid fa-user"></i>
            <h1>Admin</h1>
        </div>
        <div class="sidebar_item">
            <a href="/admin" class="sidebar_item-link active">
                <i class="fa fa-th-large"></i>
                Products</a>
            <a href="/adminCustomer" class="sidebar_item-link">
                <iclass="fa-regular fa-file-lines"></i>
                    Customers</a>
            <a href="/adminOrder" class="sidebar_item-link" style="background: #ffffff; color: rgb(0, 0, 0);">
                <iclass="fa-solid fa-address-book"></i>
                    Orders</a>
        </div>
        <div class="sidebar_item">
            <a href="/" class="sidebar_item-link"><i class="fa-solid fa-right-from-bracket"></i>Log out</a>
        </div>
    </div>
    <section class="content active" id="admin_product">
        <table>
            <tr>
                <th>Order</th>
                <th>Customer</th>
                <th>Phone number</th>
                <th>Address</th>
                <th>Confirm</th>
            </tr>
            {{#each users}}
            <tr>
                <td class="text-start" style="flex-direction: column;">
                    <div class="d-flex">
                        <div class="d-flex justify-content-between align-items-center" style="width: 100%;">
                            {{#each this.Order}}
                            <div class="pr-5" style="flex-direction: column;">
                                {{#each this.name}}
                                <h3>{{this}}:</h3>
                                {{/each}}
                            </div>
                            <div class="" style="flex-direction: column;">
                                {{#each this.size}}
                                <h3>Size:{{this}}</h3>
                                {{/each}}
                            </div>
                            <div class="">
                                <h3>{{this.totalMoney}} VND</h3>
                            </div>
                            {{/each}}

                        </div>
                    </div>
                </td>
                <td>{{this.name}}</td>
                <td>{{this.phoneNumber}}</td>
                <td>{{this.address}}</td>
                <td>
                    <i class="fa-solid fa-check fa-2xl"></i>
                </td>
            </tr>
            {{/each}}
        </table>
    </section>
</div>
<script>
    document.querySelector('header').style.display = 'none';
    document.querySelector('.topbar').style.display = 'none';
    document.querySelector('footer').style.display = 'none';
</script>