<div class="register">
    <form method="post" action="/register/create" class="register_form">
        <div class="register_form_content">
            <div class="register_form_content-heading d-flex justify-content-between register_form_content-item">
                <h1>Sign Up</h1>
                <a href="/"><i class="fa-solid fa-arrow-left fa-2xl"></i></a>
            </div>
            <div class="register_form_content-input register_form_content-item d-flex justify-content-between">
                <input name="username" type="text" id="user-register_input" placeholder="User name">
                <input name="name" type="text" id="name-register_input" placeholder="Your name">
            </div>
            <div class="register_form_content-input register_form_content-item">
                <input name="phoneNumber" type="number" id="phone-number-register_input"
                    placeholder="Your phone number">
            </div>
            <div class="register_form_content-input register_form_content-item">
                <input name="password" type="password" id="password-register_input" placeholder="Password">
            </div>
            <div class="register_form_content-btn register_form_content-item">
                <button type="submit" id="submit-register" href="">SIGN UP</button>
            </div>
            <span>or</span>
            <div class="register_form_content-btn register_form_content-item">
                <a id="go-to-singup" href="/login">SIGN IN</a>
            </div>
        </div>
    </form>
</div>