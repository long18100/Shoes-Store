<div class="container-fluid" id="shop-page">
    <div class="container">
        <div class="filter">
            <div class="filter_nav">
                <a href="/products">All</a>
                <a href="/men">Men</a>
                <a href="/women">Women</a>
                <a href="/kid" style="background: #000;">Kids</a>
            </div>
            <div class="filter_sort">
                <div class="dropdown">
                    <button style="font-size: 1.5rem;" class="bg-dark btn btn-secondary dropdown-toggle" type="button"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        Sort By Price:
                    </button>
                    <ul class="dropdown-menu">
                        <li><a style="font-size: 1.3rem;" class="dropdown-item" href="?_sort&colum=price&type=asc"><i
                                    class="fa-solid fa-arrow-up-wide-short fa-xl"></i> Hight To Low</a></li>
                        <li><a style="font-size: 1.3rem;" class="dropdown-item" href="?_sort&colum=price&type=desc"><i
                                    class="fa-solid fa-arrow-down-short-wide fa-xl"></i> Low To Hight</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="product-quality">
            <h1>Kid's Shoes ( {{products.length}} )</h1>
        </div>
        <section class="container p-0 products">
            <div class="row">
                {{#each products}}
                <div class="col-3">
                    <div class="card mb-4">
                        <a href="/products/{{this.name}}">
                            <img src="{{this.image}}" class="card-img-top" alt="...">
                        </a>
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div class="">
                                <h4 class="card-title">{{this.name}}</h4>
                                <p class="card-text">{{convertToString this.price}} VND</p>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </section>
    </div>
</div>